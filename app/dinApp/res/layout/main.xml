<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="1">
    <TextView
            android:layout_width="75dp"
            android:layout_height="20dp"
            android:id="@+id/txtAx"
            android:background="@android:color/background_light"
            android:textColor="@android:color/background_dark"
            android:layout_alignParentTop="true"/>

    <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:text="@string/btnReq"
            android:id="@+id/btnReq"
            android:layout_marginBottom="44dp"
            android:layout_above="@+id/lblCopyright" android:layout_alignParentStart="true"/>

    <TextView
            android:layout_width="360dp"
            android:layout_height="200dp"
            android:id="@+id/txtOut"
            android:background="@android:color/background_light"
            android:textColor="@android:color/background_dark"
            android:gravity="bottom"
            android:layout_above="@+id/btnReq" android:layout_centerHorizontal="true"
            android:layout_marginBottom="26dp"/>

    <TextView android:layout_width="75dp"
              android:layout_height="20dp"
              android:id="@+id/txtAy"
              android:background="@android:color/background_light"
              android:textColor="@android:color/background_dark"
              android:layout_below="@+id/txtAx" android:layout_alignStart="@+id/txtAx" android:layout_marginTop="24dp"/>

    <TextView android:layout_width="75dp"
              android:layout_height="20dp"
              android:id="@+id/txtAz"
              android:background="@android:color/background_light"
              android:textColor="@android:color/background_dark"
              android:layout_below="@+id/txtAy" android:layout_alignStart="@+id/txtAy" android:layout_marginTop="24dp"/>

    <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/copyright"
            android:id="@+id/lblCopyright"
            android:layout_alignEnd="@+id/txtOut"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnReq"
            android:gravity="right"/>
    <TextView android:layout_width="75dp" android:layout_height="20dp" android:id="@+id/txtMag"
              android:background="@android:color/background_light" android:textColor="@android:color/background_dark"
              android:layout_below="@+id/txtAz" android:layout_alignParentStart="true" android:layout_marginTop="25dp"/>
    <TextView android:layout_width="75dp" android:layout_height="20dp" android:id="@+id/txtMic"
              android:background="@android:color/background_light" android:textColor="@android:color/background_dark"
              android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>
    <TextView android:layout_width="75dp" android:layout_height="20dp" android:id="@+id/txtFall"
              android:background="@android:color/background_light" android:textColor="@android:color/background_dark"
              android:layout_alignTop="@+id/txtAy" android:layout_alignParentEnd="true"/>
    <Button android:layout_width="180dp" android:layout_height="50dp" android:text="@string/btnNotif"
            android:id="@+id/btnNotif"
            android:layout_alignBottom="@+id/btnReq" android:layout_alignEnd="@+id/txtOut"
            android:layout_below="@+id/txtOut"/>
    <Button android:layout_width="180dp" android:layout_height="50dp" android:text="@string/btnStart"
            android:id="@+id/btnStart"
            android:layout_alignBottom="@+id/txtMag" android:layout_alignEnd="@+id/txtOut"/>
</RelativeLayout>

